<h3>ユーザー編集</h3>

<%= form_with url: edit_user_path, scope: :user do |f| %>  
<table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_time ,"開始日" %></th>
      <td><%= f.date_field :start %></td>
    </tr>

    <tr>
      <th><%= f.label :finish_time ,"終了日" %></th>
      <td><%= f.date_field :finish %></td>
    </tr>

    <tr>
      <th><%= label_tag :all_day, "終日" %></th>
      <td><%= check_box_tag :all_day %></td>
    </tr>
    
    
    
    <tr>
      <th><%= f.label :content ,"スケジュールメモ" %></th>
      <td><%= f.text_area :content %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する"%></li>
      <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>